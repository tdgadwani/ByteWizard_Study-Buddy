                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" name="email" class="form-control login_input" id="exampleInputEmail1">
                            <label for="emailinvalid" class="form-label" style="color: red; visibility: <%= emailInvalidVisibility %>;">
                                <%= emailInvalidMessage %>
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control login_input" id="exampleInputPassword1">
                            <label for="" class="form-label" id="emailinvalid" style="color: red;visibility: hidden;">Invalid</label>
