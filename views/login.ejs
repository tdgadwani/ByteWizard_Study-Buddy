    <section class="Login_page">
        <div class="row">

            <div class="col-lg-6 col-md-12">
              <div class="login_memo"><img src="../static/img/Memo.svg" alt=""></div>
                <div class="form_enteries">
                  <div>
                    <div class='login_page_head'>
                      <h2 >Login</h2>
                    <h6>Don't have an Account? <span><a href="/register">Sign Up</a></span></h6>
                      </div>
                  </div>

                    <form action="/login" method="POST"> 
                        <div class="mb-3">
                          <label for="exampleInputEmail1" class="form-label">Email address</label>
                          <input type="email" name="email" class="form-control login_input login_email" id="exampleInputEmail1" aria-describedby="emailHelp">
                          <label for="" id="login_email_invalid" style="color:red;visibility: hidden;">Invalid</label>
                           
                        </div>
                        <div class="mb-3">
                          <label for="exampleInputPassword1" class="form-label">Password</label>
                          <input type="password" name="password" class="form-control login_input login_email" id="exampleInputPassword1">
                          <label for="" id="login_email_invalid" style="color:red;visibility: hidden;">Invalid</label>
                        </div>
                    
                        <button type="submit" class="btn btn-primary login_button" ><a href="/dashboard"></a>Login</button>

                      </form>
                     
                </div>
            </div>

            <div class="col-lg-6 col-md-12">
                <div class="login_image">
                    <img src="../static/img/login.svg" alt="">
                </div>
            </div>
        </div>
